  "devDependencies": {
    "@biomejs/biome": "1.8.1",
    "@tsconfig/node-lts": "20.1.3",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "20.14.6",
    "drizzle-kit": "0.22.7",
